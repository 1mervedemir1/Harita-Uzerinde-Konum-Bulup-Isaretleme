            function KapiEkle() {

                
                var Koordinatlar = '';
                Koordinatlar += coordinate[0] + ' ' + coordinate[1];  //bu kısmı polygondan pointe uyarladık
                
                $.ajax({
                    url: '../Kapi/Add',
                    type: 'GET',
                    data:
                        {
                            KapiNo: $('#kapi_no').val(),
                            //MahalleAdi: $('#mahalle_adi').val(),
                            koordinatlar: Koordinatlar
                        },
                    success: function (result) {
                        if (result) {
                            alert('işlem tamam');
                        }
                    }
                });
            }


        </script>

